<div class="modal-dialog">
  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Register</h4>
    </div>
    <div class="modal-body">
      <p>Please fill in your details to register yourself</p>
      <%= form_tag register_users_path, method: :post do %>
        <div class="form-group row">
          <%= label_tag 'first_name', 'First Name', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
          <%= text_field_tag :first_name, '', class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= label_tag 'last_name', 'Last Name', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= text_field_tag :last_name, '', class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= label_tag 'email', 'Email', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= text_field_tag :email, '', class: 'form-control'  %>
          </div>
        </div>
        <div class="form-group row">
          <%= label_tag 'password', 'Password', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= password_field_tag :password, '', class: 'form-control'  %>
          </div>
        </div>
        <div class="form-group row">
          <%= label_tag 'image_url', 'Image Url', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= text_field_tag :image_url, '', class: 'form-control' %>
          </div>
        </div>
        <%= submit_tag 'Register', class: 'btn btn-primary mb-2' %>
      <% end %>
    </div>
    <div class="modal-footer">
      <%= link_to 'Login', login_users_path, class: 'btn btn-info', remote: true %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>